<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calculadora_de_Jake" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Calculadora_de_Jake" parent="Base.Theme.Calculadora_de_Jake" />

    <!-- All this just for Square Buttons... -->
    <style name="SquareCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>

    <!-- Regular Button Theme -->
    <style name="Theme.Calculadora_de_Jake.regularButton" parent="Theme.Calculadora_de_Jake">
        <!-- Button Background Colour -->
        <item name="android:backgroundTint">@color/calc_grey</item>
        <!-- Button Text Colour -->
        <item name="android:textColor">@color/black</item>
        <!-- Button Roundness -->
        <item name="shapeAppearanceOverlay">@style/SquareCorners</item>
        <!-- Button Text Size -->
    <!-- <item name="android:autoSizeTextType">uniform</item>-->
    </style>

    <!-- Modifier Button Theme -->
    <style name="Theme.Calculadora_de_Jake.modifierButton" parent="Theme.Calculadora_de_Jake.regularButton">
        <item name="android:backgroundTint">@color/calc_lime</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Important Button Theme -->
    <style name="Theme.Calculadora_de_Jake.importantButton" parent="Theme.Calculadora_de_Jake.regularButton">
        <item name="android:backgroundTint">@color/calc_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>