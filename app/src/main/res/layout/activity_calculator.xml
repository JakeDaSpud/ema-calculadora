<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calc_background"
    android:paddingHorizontal="5dp"
    android:paddingVertical="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/calculatorScreen"
            style="@style/Theme.Calculadora_de_Jake.regularButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@color/calc_grey"
            android:clickable="false"
            android:fontFamily="monospace"
            android:paddingHorizontal="5dp"
            android:text="@string/calc_0"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textSize="96sp"
            android:typeface="sans" />

        <LinearLayout
            android:id="@+id/buttonRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonClear"
                style="@style/Theme.Calculadora_de_Jake.importantButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/calc_clear" />

            <Button
                android:id="@+id/buttonFlipSign"
                style="@style/Theme.Calculadora_de_Jake.modifierButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_flip_sign" />

            <Button
                android:id="@+id/buttonDivide"
                style="@style/Theme.Calculadora_de_Jake.modifierButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_divide" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_7" />

            <Button
                android:id="@+id/button8"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_8" />

            <Button
                android:id="@+id/button9"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_9" />

            <Button
                android:id="@+id/buttonMultiply"
                style="@style/Theme.Calculadora_de_Jake.modifierButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_multiply" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_4" />

            <Button
                android:id="@+id/button5"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_5" />

            <Button
                android:id="@+id/button6"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_6" />

            <Button
                android:id="@+id/buttonSubtract"
                style="@style/Theme.Calculadora_de_Jake.modifierButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_minus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_1" />

            <Button
                android:id="@+id/button2"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_2" />

            <Button
                android:id="@+id/button3"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_3" />

            <Button
                android:id="@+id/buttonAdd"
                style="@style/Theme.Calculadora_de_Jake.modifierButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_plus" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttonRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button0"
                style="@style/Theme.Calculadora_de_Jake.regularButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@string/calc_0" />

            <Button
                android:id="@+id/buttonPeriod"
                style="@style/Theme.Calculadora_de_Jake.modifierButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_period" />

            <Button
                android:id="@+id/buttonEquals"
                style="@style/Theme.Calculadora_de_Jake.importantButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/calc_equals" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>